{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
    <h1>Article list</h1>

    <ul>
    {% for category in categories %}
    
        <li>
            <a href="{{ path('category_show', { 'id': category.id }) }}">{{ category }}</a>
        </li>
    
    {% endfor %}
    </ul>
    
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles|slice(0,3) %}
            
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.title }}</td>
                <td>{{ article.content|length > 50 ? article.content|slice(0, 50) ~ '...' : article.content  }}</td>
                <td>{{ article.category }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                            </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
            
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
